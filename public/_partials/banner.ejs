<% include ../_helpers.ejs %>
<section id="banner">
  <!--
    ".inner" is set up as an inline-block so it automatically expands
    in both directions to fit whatever's inside it. This means it won't
    automatically wrap lines, so be sure to use line breaks where
    appropriate (<br />).
  -->
  <div class="inner">
    <header>
      <h2>
        <img class="jsla-banner-logo" src="/images/logo.svg">
      </h2>
    </header>
    <p>
      The Los Angeles Javascript meetup <br />
    </p>
    <footer>
      <ul class="buttons stacked">
        <li>
          <strong>
            <h2>Next event:</h2>
            <h3><%= dateToReadable(new Date(event.date)) %></h3>
          </strong>
        </li>
        <li>
          <h3>at <a href="#location"><%= event.host.organization %></a></h3>
        </li>
      </ul>
      <%- partial("speakers_small_card", {event: event}) %>
      <ul class="buttons stacked">
          <li><a href="https://twitch.tv/jsdotla" class="button fit scrolly">Twitch.tv/jsdotla</a></li>
          <li><a href="http://eepurl.com/jdRNb" class="button fit scrolly">Join mailing list</a></li>
      </ul>
    </footer>
  </div>
  <%- partial("sponsors", {event: event}) %>
</section>
